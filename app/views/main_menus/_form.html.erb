<%= form_with(model: @main_menu, local: true) do |f| %>
      <%= render 'error.messages', model: f.object %> 
      <div class="field">
        <p>料理名</p>
        <%= f.text_field :name, placeholder: "親子丼" %>
      </div>
      <div class="field">
        <p>カロリー</p>
        <%= f.text_field :kcal, placeholder: "400" %>
      </div>
      <div class="field">
        <label class="form-image">
        <p>画像</p>
        <%= f.file_field :image, class: 'hidden' %>
        <div id="image-list"></div>
  <%= image_tag @main_menu.image, id: 'image' if @main_menu.image.present? %>
    　　</label>
      </div>
      <div class="field">
        <p>材料</p>
        <%= f.text_area :ingredient, placeholder: "白菜 1/2" %>
      </div>
      <div class="field">
        <p>説明</p>
        <%= f.text_area :expiration, placeholder: "とろとろ卵の甘じょっぱい親子丼" %>
      </div>
      <div class="field">
        <p>レシピ</p>
        <%= f.text_area :recipe, placeholder: "鍋と玉ねぎを入れる" %>
      </div>
      <%= f.submit "投稿する", :class => 'submit_btn' %>
<% end %>