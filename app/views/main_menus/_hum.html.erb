<header>
   <div class="site-header__wrapper">
    <a href="/" class="brand">MenuApp</a>
   </div>  
    <div class="hamburger-menu">
        <input type="checkbox" id="menu-btn-check">
        <label for="menu-btn-check" class="menu-btn"><span></span></label>
        <!--ここからメニュー-->
        <div class="menu-content">
            <ul>
                <% if user_signed_in? %>
                    <li><%= link_to current_user.nickname, user_path(current_user.id), class: "nav-item" %></li> 
                    <li><%= link_to '新規投稿', new_main_menu_path, class: "nav-item" %></li>
                    <li><%= button_to 'サインアウト',  destroy_user_session_path, {method: :delete, class: "nav-item-button"} %></li>
                <% else %>
                    <li><%= link_to 'サインイン', new_user_session_path, class: "nav-item" %></li>
                    <li><%= link_to '新規登録', new_user_registration_path, class: "nav-item" %></li>
                <% end %>
            </ul>
        </div>
        <!--ここまでメニュー-->
    </div>
</header>
